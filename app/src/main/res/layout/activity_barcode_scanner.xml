<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.BarcodeScannerActivity">

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingAnimation"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="@+id/barcodeCameraPreview"
            app:layout_constraintStart_toStartOf="@+id/barcodeCameraPreview"
            app:layout_constraintBottom_toBottomOf="@+id/barcodeCameraPreview"
            app:layout_constraintTop_toTopOf="@+id/barcodeCameraPreview"
            android:indeterminateTint="@color/colorAccent"
            android:elevation="8sp"/>

    <com.paywithclerc.paywithclerc.barcode.CameraSourcePreview
            android:id="@+id/barcodeCameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <com.paywithclerc.paywithclerc.barcode.GraphicOverlay
                android:id="@+id/barcodeCameraOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"/>
    </com.paywithclerc.paywithclerc.barcode.CameraSourcePreview>

</androidx.constraintlayout.widget.ConstraintLayout>