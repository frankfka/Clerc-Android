<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/number_stepper_center_background"
              android:id="@+id/numberStepper">

    <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_minus_primary"
            android:id="@+id/numberStepperMinusButton"
            android:layout_weight="1"
            android:background="@drawable/number_stepper_left_background"
            android:scaleType="fitCenter"
            android:padding="12sp"/>

    <TextView
            tools:text="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/numberStepperValueText"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="24sp"
            android:paddingEnd="24sp"
            android:background="@android:color/transparent"
            android:textSize="@dimen/mediumFontSize"
            android:textColor="@color/colorTextDark"/>

    <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_add_primary"
            android:id="@+id/numberStepperPlusButton"
            android:layout_weight="1"
            android:background="@drawable/number_stepper_right_background"
            android:scaleType="fitCenter"
            android:padding="12sp"/>
</LinearLayout>