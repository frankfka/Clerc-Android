<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorDivider"/>
            <stroke android:width="1.5px" android:color="@color/colorTextDark"/>
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1.5px" android:color="@color/colorPrimaryDark"/>
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="1.5px" android:color="@color/colorPrimary"/>
            <corners android:bottomRightRadius="4dp" android:topRightRadius="4dp"/>
        </shape>
    </item>
</selector>